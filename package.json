{
  "name": "beyondchats",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "llm-pipeline"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && composer install",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:llm": "npm run scraper --workspace=llm-pipeline",
    "dev:backend": "cd backend && php artisan serve",
    "build:frontend": "npm run build --workspace=frontend",
    "setup": "cp .env.example .env && npm run install:all && cd backend && php artisan key:generate && php artisan migrate"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "lucide-react": "^0.562.0",
    "puppeteer": "^24.34.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "vite": "^5.4.21"
  }
}
